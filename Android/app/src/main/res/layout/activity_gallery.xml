<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gallery_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:theme="@style/Theme.4Shop"
            android:id="@+id/appbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/Toolbar">

                <TextView
                    android:id="@+id/gallery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Shop"
                    android:textSize="30dp"
                    android:textColor="#F386FD"
                    android:layout_gravity="center"/>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filter_item1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/hashtag_filter"
                    android:text="@string/hashitem1"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/filter_item2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/hashtag_filter"
                    android:text="@string/hashitem2"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/filter_item3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/hashtag_filter"
                    android:text="@string/hashitem3"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/gallery_recyclerView">
        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:icon="@drawable/upload"
            app:layout_anchor="@id/gallery_recyclerView"
            app:layout_anchorGravity="bottom|right"
            android:id="@+id/add_btn"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>