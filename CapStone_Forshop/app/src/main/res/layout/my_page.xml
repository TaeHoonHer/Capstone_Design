<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="?attr/actionBarSize"
        >

        <!-- Back button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/gallery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Shop"
            android:textSize="30dp"
            android:textColor="#F386FD"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- First section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/databox"
        android:orientation="horizontal"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cloth"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pants"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/head_data"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="14.8%"
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/up_data"
                android:layout_width="80dp"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="33.6%"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/down_data"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="51.6%"
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_data"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/model_2"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>


    <!-- Second section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/databox"
        android:orientation="horizontal"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cloth"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pants"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/head_data2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/up_data2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/down_data2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_data2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/databox"
        android:orientation="horizontal"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cloth"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pants"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/head_data3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/up_data3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/down_data3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textSize="23sp"
                android:textColor="#000"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_data3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
